
### Application control {

# program launcher
super + p
	rofi -show run

super + shift + p
  rofi -show drun

# launch terminal emulator
super + Return
	kitty

# launch browser
super + w
  google-chrome-stable

# launch file explorer
super + e
  pcmanfm

# launch process viewer
ctrl + alt + Delete
  kitty -e htop

# Spotify control
super + m; {h,Return,l}
  playerctl -p spotify {previous,play-pause,next}

# make sxhkd reload its configuration files:
super + shift + r
	~/.config/sxhkd/scripts/reload.sh

# }




### System control {

# take a screenshot of all screens
@Print
  scrot -e 'mv $f ~/screenshots'

# take a screenshot of a selected area
shift + @Print
  scrot --select --freeze -e 'mv $f ~/screenshots'

# take a screenshot of the currently focused window
ctrl + @Print
  scrot --focused -e 'mv $f ~/screenshots'

# mute sound
XF86AudioMute
  amixer set Master toggle

# raise/lower volume
XF86Audio{Raise,Lower}Volume
  amixer set Master {5%+,5%-} unmute

# raise brightness
XF86MonBrightnessUp
  light -A 5

# lower brightness
XF86MonBrightnessDown
  light -U 5

# power control
super + Escape ; {l,e,s,r,shift+s}
  powercontrol {lock,logout,suspend,reboot,shutdown}

# sxhkd help menu
super + question
  ~/.config/sxhkd/scripts/help.sh

# }

  


### wm control {

# quit/restart bspwm
super + alt + {,r}
  ~/.config/bspwm/scripts/reload.sh

# }




### Node control {

# close and kill the focused node
super + {_,shift + }q
	bspc node -{c,k}

# }




### Layout {

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

# }




### Move, Focus, Resize {

# focus or move the node to the given direction
super + {_,shift + }{h,j,k,l}
	~/.config/bspwm/scripts/{focus,move}.sh {west,south,north,east}

# focus the given desktop
super + {ampersand,eacute,quotedbl,apostrophe,parenleft,section,egrave,exclam,ccedilla,agrave}
  bspc desktop -f '^{1-9,10}'

# cycle through desktops
super + {_,shift + } Tab
  bspc desktop -f {next,prev}

# move the node to the given desktop
super + shift + {1-9,0}
  bspc node -d '^{1-9,10}'

# resize window mode (i3-like)
super + r : {h,j,k,l}
  ~/.config/bspwm/scripts/resize.sh {left,down,up,right} 30

## move a floating window
#super + {h,j,k,l}
#  bspc node -v {-20 0,0 20,0 -20,20 0}

# }
