{
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": [
        "--background-index",
        "--clang-tidy",
        "-j=8",
        "--all-scopes-completion",
        "--suggest-missing-includes",
        "--completion-style=detailed",
        "--header-insertion=iwyu"
      ],
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/"
      ]
    }
  },
  "diagnostic.virtualText": true
}
